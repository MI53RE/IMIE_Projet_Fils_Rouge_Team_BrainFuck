{% extends 'base.html.twig' %}
{% block title %}Skill{% endblock %}
{% block body %}
<div class="container skills">
    <a class="btn btn-cta-primary input-file-bt pull-left" href="{{ path('tbf_skills_add') }}">Ajouter une competence</a>
    <table class="table table-striped">
        <thead>
            <th>Nom</th>
            <th>Description</th>
            <th class="text-center">Modifier</th>
        <th class="text-center">Suppression</th>
        </thead>
        <tbody>
        {% for skill in skills if skills is defined %}
            <tr>
                <td>{{ skill.name}}</td>
                <td>{{ skill.description}}</td>
                <td class="text-center"><a href="{{ path('tbf_skills_modify', {'id': skill.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                <td class="text-center"><a href="{{ path('tbf_skills_remove', {'id': skill.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}