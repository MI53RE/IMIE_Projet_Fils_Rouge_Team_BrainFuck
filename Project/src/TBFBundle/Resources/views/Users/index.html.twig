{% extends 'base.html.twig' %}
{% block title %}User{% endblock %}
{% block body %}
    <a href="{{ path('tbf_users_add') }}">Ajouter un utilisateur</a>

    <table class="table table-striped">
    <thead>
    <th>Nom</th>
    <th>Prénom</th>
   {# <th>Email</th>#}
    <th>Projets</th>
    <th>Compétences</th>
    <th class="text-center">Modifier</th>
    <th class="text-center">Suppression</th>
    </thead>
    <tbody>s
    {% for user in users if users is defined %}
        <tr>
            <td>{{ user.firstname}}</td>
            <td>{{ user.lastname}}</td>
           {# <td>{{ user.email}}</td>#}

            {#<td>{{ user.project}}</td>#}
            {#<td>{{ user.skills}}</td>#}
            <td class="text-center"><a href="{{ path('tbf_users_modify', {'id': user.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
            <td class="text-center"><a href="{{ path('tbf_users_remove', {'id': user.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
        </tr>
    {% endfor %}
{% endblock %}