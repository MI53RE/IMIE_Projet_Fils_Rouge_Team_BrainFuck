<html>
  <head>
      <meta charset="UTF-8" />
      <title>{% block title %}Bienvenue !{% endblock %}</title>
      {% block stylesheets %}
         {#<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" />#}
          <link rel="stylesheet" href="{{ asset('bundles/TBF/css/bootstrap.min.css') }}" />
          <link rel="stylesheet" href="{{ asset('bundles/TBF/plugins/font-awesome/css/font-awesome.css') }}">
          <link id="theme-style" rel="stylesheet" href="{{ asset('bundles/TBF/css/styles.css') }}">
      {% endblock %}
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>
  <body>
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h1 class="text-center">Connexion</h1>
          </div>
          <div class="modal-body">
            <form class="form col-md-12 center-block">
              <div class="form-group">
                <input type="text" class="form-control input-lg" placeholder="Identifiant">
              </div>
              <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder="Mot de passe">
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Valider</button>
                <span class="pull-right"><a href="#">Demander un identifiant ?</a></span>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <div class="col-md-12">
              <a href="{{ path('tbf_homepage') }}"><button class="btn btn-cta-primary" data-dismiss="modal" aria-hidden="true">Annuler</button></a>
            </div>	
          </div>
        </div>
      </div>
    </div>
    {% block javascripts %}
    <script src="{{ asset('bundles/TBF/plugins/jquery-1.11.2.min.js') }}"></script>
    <script src="{{ asset('bundles/TBF/plugins/jquery-migrate-1.2.1.min.js') }}"></script>
    <script src="{{ asset('bundles/TBF/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/TBF/plugins/jquery-rss/dist/jquery.rss.min.js') }}"></script>
    <script src="{{ asset('bundles/TBF/js/main.js') }}"></script>  
    {% endblock javascripts %}
  </body>
</html>